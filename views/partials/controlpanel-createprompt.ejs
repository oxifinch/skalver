<div class="row justify-content-center mt-3">
    <div class="col-5">
        <% if(user.libraries.length < 3) { %>
            <p class="text-light text-center">You can create <span class="text-warning"><%= 3 - user.libraries.length%></span> more libraries</p> 
        <button id="button_create_new_library" class="btn btn-success w-100">Create New Library</button>
        <% } else { %>
            <p class="text-light text-center">You cannot create any more libraries.</p>
        <% } %>
    </div>
</div>
